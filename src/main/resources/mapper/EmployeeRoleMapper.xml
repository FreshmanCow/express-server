<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "<http://mybatis.org/dtd/mybatis-3-mapper.dtd>">
<mapper namespace="com.bobby.securityjwt.mapper.EmployeeRoleMapper">

    <select id="getRolesByEmployeeId" resultType="com.bobby.securityjwt.entity.Role">
        select role.* from employee_role, role
        <where>
            <if test="id != null">
                employee_role.employee_id=#{id} and employee_role.role_id=role.id
            </if>
        </where>
    </select>

</mapper>